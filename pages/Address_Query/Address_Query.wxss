/* pages/addressQuery/addressQuery.wxss */

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: -60px;
  }
  
  .input-container {
	display: flex;
	align-items: center;
	margin-bottom: 10px;
  }
  
  .label {
	font-size: 16px;
	margin-right: 10px;
  }
  
  .input {
	flex: 1;
	height: 30px;
	border: 1px solid #ccc;
	border-radius: 4px;
	padding: 0 10px;
  }
  
  .button {
	width: 100px;
	height: 40px;
	background-color: #4d89f0;
	color: #fff;
	border-radius: 4px;
	line-height: 40px;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 20px;
  }
  
  .result-container {
	margin-top: 20px;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	width: 100%;
  }
  
  .result-label {
	font-size: 18px;
	font-weight: bold;
	margin-bottom: 10px;
  }
  
  .result-item {
	font-size: 16px;
	margin-bottom: 15px; /* 增加底部间距 */
	white-space: pre-wrap; /* 允许换行 */
	word-break: break-all;
  }
  
  .flow-chart {
	width: 100%;
	height: 350px;
	margin-top: 10px;
  }
  
  