/* pages/transaction/query.wxss */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20px;
  }
  
  .title {
	font-size: 24px;
	font-weight: bold;
	margin-bottom: 20px;
  }
  
  .search-bar {
	display: flex;
	align-items: center;
	margin-bottom: 40px;
  }
  
  .input {
	flex: 2;
	height: 40px;
	padding: 0 10px;
	margin-right: 10px;
	border: 1px solid #ccc;
	border-radius: 4px;
  }
  
  .btn-search {
	flex: 0.5;
	height: 40px;
	background-color: #007aff;
	color: #fff;
	border: none;
	border-radius: 4px;
	margin-left: 10px;
	display: flex;
	justify-content: center;
	align-items: center;
  }
  
  .transaction-list {
	width: 100%;
  }
  
  .transaction-item {
	display: flex;
	align-items: center;
	margin-bottom: 10px;
  }
  
  .item-label {
	font-weight: bold;
	width: 100px;
	text-align: right;
	margin-right: 10px;
  }
  
.item-value {
  flex: 1;
  margin-left: 10px;
  white-space: pre-wrap;
  word-break: break-all;
}
  